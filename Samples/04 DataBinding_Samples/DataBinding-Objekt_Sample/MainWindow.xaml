<Window x:Class="DataBinding_Objekte_Sample1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataBinding_Objekte_Sample1"
        mc:Ignorable="d"
        Title="Objektbindung (einfach)" Height="264" Width="431" FontSize="20" WindowStartupLocation="CenterScreen">
    <StackPanel>
       <TextBox Margin="10"  Text="{Binding Path=Name}" />
       <TextBox Margin="10"  Text="{Binding Path=Wohnort}" />
       <TextBox Margin="10"  Text="{Binding Path=Alter}" />
       <Button Content="Objektdaten ändern" Name="button1" Click="button1_Click" />
    </StackPanel>
</Window>
