<Window x:Class="Attached_Dependcy_Property_Sample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Attached_Dependcy_Property_Sample"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" FontSize="20">
    <Grid local:myTools.RowHeights="*,Auto,25">
        <!-- statt:
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
         -->
        <TextBlock Grid.Row="0" TextWrapping="Wrap" Padding="10">
            Das Beispiel zeigt, wie mittels einer Attached Dependency Property 
            das XAML für das Setzen der Höhe einer Grid-Zeile vereinfacht werden kann. 
            <LineBreak />
            <LineBreak />
            (die Buttons haben keine Funktion, sie sind nur Platzhalter, um die Rows des Grids zu visualisieren) 
        </TextBlock>
        <Button Grid.Row="1" Content="Button 1"/>
        <Button Grid.Row="2" Content="Button 2" />
    </Grid>
</Window>
