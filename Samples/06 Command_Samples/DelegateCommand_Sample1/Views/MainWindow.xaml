<Window x:Class="DelegateCommand_Sample1.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DelegateCommand_Sample1.Views"
        xmlns:vm="clr-namespace:DelegateCommand_Sample1.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="225"  WindowStartupLocation="CenterScreen" FontSize="16">
    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Button Content="{Binding ClickButtonContent}" Width="65" Height="65" Command="{Binding ClickCommand}" CommandParameter="6"/>

        <StackPanel Grid.Row="1">
            <TextBox Name="UpTextBox" Margin="5,5" Text="{Binding UpText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <Button  Content="{Binding MoveButtonContent}" Margin="5,0"  Command="{Binding MoveCommand }" />
            <TextBox Name="DownTextBox" Margin="5,5" Text="{Binding DownText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>
    </Grid>
</Window>
