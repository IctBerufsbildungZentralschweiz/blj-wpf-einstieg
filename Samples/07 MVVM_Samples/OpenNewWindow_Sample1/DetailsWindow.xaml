<Window x:Class="OpenNewWindow_Sample.DetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenNewWindow_Sample"
        mc:Ignorable="d"
        Title="DetailsWindow" Height="138" Width="178" WindowStartupLocation="CenterScreen">

    <Canvas>
        <TextBox Height="23" Canvas.Left="26" TextWrapping="Wrap" Text="{Binding InputText}" Canvas.Top="23" Width="120"/>
        <Button Content="Cancel" Canvas.Left="52" Canvas.Top="59" Width="75" Command="{Binding CloseWindowCommand}"/>

    </Canvas>
</Window>
