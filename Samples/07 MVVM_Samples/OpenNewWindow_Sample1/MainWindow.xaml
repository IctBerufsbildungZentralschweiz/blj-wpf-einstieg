<Window x:Class="OpenNewWindow_Sample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OpenNewWindow_Sample"
        xmlns:vm="clr-namespace:OpenNewWindow_Sample.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="173" Width="249" FontSize="14" WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <vm:MainWindowViewModel />
    </Window.DataContext>
    <Canvas>
        <Label Content="Deine Eingabe: " Canvas.Left="15" Canvas.Top="29" RenderTransformOrigin="0.472,-0.414" />
        <TextBox Width="100" Canvas.Left="121" Canvas.Top="33" Text="{Binding InputText}"/>
        <Button Canvas.Left="15" Canvas.Top="75" Padding="5" Command="{Binding OpenWindowCommand}">
            In neuem Fenster modal öffnen
        </Button>
    </Canvas>
</Window>
